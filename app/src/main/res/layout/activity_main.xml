<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.product.stepanenko.calculatemealday.Registration"
    android:background="@color/colorBackground">
    <include layout="@layout/my_toolbar"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mainHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="План на сегодня:"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"
                            android:layout_marginTop="3dp"/>

                        <TextView
                            android:id="@+id/mainPFC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="БЖУ"
                            android:textColor="@color/colorTitleSans" />
                    </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_breack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Завтрак"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#808080">

                        </GridLayout>

                        <ListView
                            android:id="@+id/ListViewBR"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:scrollIndicators="none"
                            android:layout_marginLeft="5dp">

                        </ListView>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_breack2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Полдник"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#808080">

                        </GridLayout>

                        <ListView
                            android:id="@+id/ListViewBRTwo"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:scrollIndicators="none"
                            android:layout_marginLeft="5dp">

                        </ListView>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_lunch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Обед"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#808080">

                        </GridLayout>

                        <ListView
                            android:id="@+id/ListViewLunch"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:scrollIndicators="none"
                            android:layout_marginLeft="5dp">

                        </ListView>
                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_dinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Ужин"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#808080">

                        </GridLayout>

                        <ListView
                            android:id="@+id/ListViewDinner"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:scrollIndicators="none"
                            android:layout_marginLeft="5dp">

                        </ListView>
                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_dinner2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Второй Ужин"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#808080">

                        </GridLayout>

                        <ListView
                            android:id="@+id/ListViewDinnerTwo"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:scrollIndicators="none"
                            android:layout_marginLeft="5dp">

                        </ListView>
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="В течение дня вам рекомендуется съесть грамм овощей:"
                            android:textSize="18sp"
                            android:textColor="@color/colorTitleSans"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#808080">

                        </GridLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:id="@+id/main_vegetable"
                            android:textSize="18sp"
                            android:gravity="center"/>

                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
